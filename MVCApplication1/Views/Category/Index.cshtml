@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
           {
               <tr>
                   <td width= 50%>
                       @item.Name
                   </td>
                   <td width= 30%>
                       @item.DisplayOrder
                   </td>
                   <td>
                       <div class="btn-group">
                           <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">
                               <i class="bi bi-pencil-square"></i>
                           </a>
                           <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                               <i class="bi bi-trash-fill"></i>
                           </a>
                       </div>
                   </td>
               </tr>
           }
        </tbody>
    </table>
</div>


